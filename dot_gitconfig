[pull]
	rebase = true
[core]
	excludesFile = ~/.gitignore.global
[alias]
	d = diff
	a = add .
	p = push
	s = status
	sh = "-c diff.external=difft show --ext-diff"
	l = log
	la = "-c diff.external=difft log -p --ext-diff"
[diff]
	external = difft
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[pager]
        difftool = true
